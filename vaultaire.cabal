                     -funbox-strict-fields
                     -fno-warn-missing-signatures
                     -fno-warn-unused-do-bind

  ghc-prof-options:  -prof -fprof-auto-top


executable           telemetry
  default-language:  Haskell2010

  build-depends:     base,
                     bytestring,
                     optparse-applicative,
                     transformers,
                     zeromq4-haskell,
                     time,
                     old-locale

  main-is:           telemetry.hs
  hs-source-dirs:    src
  include-dirs:      .

  ghc-options:       -O2
