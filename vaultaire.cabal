  default-language:  Haskell2010

  build-depends:     base,
                     HUnit,
                     hspec,
                     hspec-expectations,
                     QuickCheck,
                     bytestring,
                     text,
                     containers >= 0.5,
                     cereal,
                     semigroups,
                     transformers,
                     mtl,
                     lz4,
                     zeromq4-haskell,
                     time,
                     type-level,
                     protobuf,
                     locators,
                     blaze-builder,
                     rados-haskell >= 2.0.0

